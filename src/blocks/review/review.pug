include ../like-button/like-button.pug
-
    /*
        review ({
            author: string,
            date: string,
            photo: string,
            text: string,
            likesCount: int,
            liked: bool
        })
    */
mixin review(values)
    div(class="review")
        p(class="review__author")
            | #{values.author}
            br
            | #{values.date}
        div(class="review__photo" style=`background-image: url(${values.photo})`)
        p(class="review__text")= values.text
        div(class="review__like-button")
            +like-button({count: values.likesCount, liked: values.liked})



