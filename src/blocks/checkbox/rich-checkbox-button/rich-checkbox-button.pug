-
    /*
        rich-checkbox-button ({
            name: string,
            checked: bool,
            title: string,
            description: string
        })
    */
mixin rich-checkbox-button(values)
    -
        if(values.checked != true) values.checked = undefined;
    label(class="rich-checkbox-button")
        input(
            class="rich-checkbox-button__input"
            type="checkbox"
            name=values.name
            checked=values.checked
        )
        p(class="rich-checkbox-button__title")= values.title
        p(class="rich-checkbox-button__description")= values.description