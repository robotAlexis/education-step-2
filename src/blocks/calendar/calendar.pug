include ../button/button.pug
-
    /*
        calendar ()
    */
mixin calendar()
    div(class="calendar")
        div(class="calendar__left-arrow") &#xe5c4;
        div(class="calendar__right-arrow") &#xe5c8;
        p(class="calendar__title") Месяц ГГГГ
        ul(class="calendar__week-row")
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Пн
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Вт
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Ср
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Чт
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Пт
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Сб
            li(class="calendar__day-cell")
                p(class="calendar__day-text calendar__day-text_theme_title") Вс
        div(class="calendar__days-field")


        div(class="calendar__ok-button")
            +button({text: "Применить", type: "button", theme: "backgroundless"})
        div(class="calendar__clear-button")
            +button({text: "Очистить", type: "button", theme: "backgroundless"})        