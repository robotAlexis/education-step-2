include ../button/button.pug

-
    /*
        header ({
            items: [
                {
                    text: string,
                    url: string
                    current: bool,
                    withArrow: bool
                }
            ]
            logged: bool
        })
    */
mixin header(values)

    header(class="header")
        div(class="header__content")
            div(class="header__logo")
            div(class= (values.logged == true) ? "header__buttons header__buttons_disabled" : "header__buttons")
                div(class="header__button")
                    +button({
                        type: "login",
                        name: "login",
                        value: "login",
                        text: "Войти",
                        theme: "low-bordered"
                    })
                div(class="header__button")
                    +button({
                        type: "register",
                        name: "register",
                        value: "register",
                        text: "Зарегистрироваться",
                        theme: "low"
                    })

            div(class= (values.logged == true) ? "header__account" : "header__account header__account_disabled")
                p(class="header__account-name") Юлий Цезарь

            
            nav(class="header__menu")
                - for (let item of values.items)
                    a(
                        class= "header__menu-item" + (item.current ? "  header__menu-item_current" : "") + (item.withArrow ? "  header__menu-item_with-arrow" : "")
                        href= item.url
                    )= item.text





