include ../../input/text-field/text-field.pug
include ../../input/button-block/button-block.pug
-
    /*
        login-form ({})
    */
mixin login-form()
    div(class='login-form')

        p(class='login-form__title') Войти

        div(class='login-form__field')
            +text-field({name: "email", value: "", placeholder: "Email"})
        div(class='login-form__field')
            +text-field({name: "pass", value: "", placeholder: "Пароль", type: "password"})

        div(class='login-form__button-block')
            +button-block({
                type: "submit",
                name: "submit",
                value: "submit",
                text: "Войти",
                theme: "long"
            })
            
        div(class='login-form__button-block')
            div(class='login-form__registration-button')
                +button-block({
                    type: "button",
                    name: "registration",
                    value: "registration",
                    text: "Создать",
                    theme: "bordered"
                })
            div(class='login-form__registration-tip')
                p(class='login-form__registration-tip-text') Нет аккаунта на Toxin?

