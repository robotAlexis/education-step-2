include ../../button/button.pug
-
    /*
        customers-dropdown ()
    */
mixin customers-dropdown()
    div(class="customers-dropdown")
        p(class="customers-dropdown__text") Сколько гостей
        div(class="customers-dropdown__item-list")

            div(class="customers-dropdown__item")
                div(class="customers-dropdown__count-button customers-dropdown__count-button_increase")
                p(class="customers-dropdown__count-text") 2
                div(class="customers-dropdown__count-button customers-dropdown__count-button_decrease")
                p(class="customers-dropdown__item-text") Взрослые

            div(class="customers-dropdown__item")
                div(class="customers-dropdown__count-button customers-dropdown__count-button_increase")
                p(class="customers-dropdown__count-text") 1
                div(class="customers-dropdown__count-button customers-dropdown__count-button_decrease")
                p(class="customers-dropdown__item-text") Дети

            div(class="customers-dropdown__item")
                div(class="customers-dropdown__count-button customers-dropdown__count-button_increase")
                p(class="customers-dropdown__count-text") 0
                div(class="customers-dropdown__count-button customers-dropdown__count-button_decrease customers-dropdown__count-button_inactive")
                p(class="customers-dropdown__item-text") Младенцы

            div(class="customers-dropdown__item")
                div(class="customers-dropdown__ok-button")
                    +button({text: "Применить", type: "button", theme: "backgroundless"})
                div(class="customers-dropdown__clear-button")
                    +button({text: "Очистить", type: "reset", theme: "backgroundless"})